<h2>Hello @Model.Name</h2>
<p>Phone: @Model.Phone</p>
<p>Total Given: @ViewBag.TotalGiven</p>
<p>Pending: @ViewBag.Pending</p>

<h3>Your Contributions</h3>
<table border="1">
    <tr><th>Date</th><th>Amount</th></tr>
    @foreach (var c in Model.Contributions)
    {
        <tr><td>@c.Date.ToShortDateString()</td><td>@c.Amount</td></tr>
    }
</table>

<h3>Society Expenses</h3>
<table border="1">
    <tr><th>Date</th><th>Comment</th><th>Amount</th></tr>
    @foreach (var e in ViewBag.Expenses)
    {
        <tr><td>@e.Date.ToShortDateString()</td><td>@e.Comment</td><td>@e.Amount</td></tr>
    }
</table>

<p>Total Society Get: @ViewBag.SocietyTotalGet</p>
<p>Total Spent: @ViewBag.SocietySpent</p>
<p>Balance: @ViewBag.Balance</p>
